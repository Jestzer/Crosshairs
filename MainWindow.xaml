<Window x:Class="Crosshairs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="GM Crosshairs" Height="100" Width="100"
    WindowStyle="None"
        AllowsTransparency="True"
        Background="{x:Null}"
     Opacity="0.5"
            WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock x:Name="crosshairTextBlock"
                   HorizontalAlignment="Center" TextWrapping="Wrap" Text="+" VerticalAlignment="Top" Foreground="Black" 
                   Background="{x:Null}" FontWeight="Bold" FontSize="30" Margin="0,50,0,0"/>
    </Grid>
</Window>
